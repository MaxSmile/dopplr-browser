  </head>
  <body {% block bodyAttributes %}{% endblock %}>
    {% block body %}

      {% block precontainer %}{% endblock %}

      <div class="container">
        {% block container %}{% endblock %}
      </div>

      {% block postcontainer %}{% endblock %}

    {% endblock %}
  </body>
</html>
